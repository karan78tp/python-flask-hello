{
 "id": "/flask-app123",
 "container": {
   "type": "DOCKER",
   "docker": {
     "image": "mesosphere/python-flask-hello:latest"
   },
   "portMappings": [
     {
       "containerPort":81,
       "hostPort":0,
       "protocol": "tcp",
       "name": "flask-app123",
       "labels": { "VIP_0": "/flask-app123:1003"}
     }
   ]
 },
 "cpus": 0.1,
 "instances": 2,

 "mem": 128,
 "networks": [
   {
     "mode": "container",
     "name": "DCOS"
     
   }
 ],
 "upgradeStrategy": {
   "maximumOverCapacity": 1,
   "minimumHealthCapacity": 1
 }
}